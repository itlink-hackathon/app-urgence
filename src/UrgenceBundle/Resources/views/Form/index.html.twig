{% extends 'UrgenceBundle::layout.html.twig' %}

{% block title %}Alerter les secours{% endblock %}

{% block content %}
        {{ form_start(form, {'attr' : {'class': 'form-horizontal'}}) }}

        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>

        <div class="form-group">
            {{ form_label(form.last_name, 'Nom de famille',{'label_attr': {'class': 'col-xs-3 control-label'}}) }}
            <div class="col-xs-9">
                {{ form_widget(form.last_name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

    {{ form_end(form) }}


{% endblock %}
